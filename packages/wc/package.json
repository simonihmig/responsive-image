{
  "name": "@responsive-image/wc",
  "version": "2.0.4",
  "description": "Web component to render responsive images, provided as locally processed images or loaded remotely from Image CDNs",
  "keywords": [
    "responsive image",
    "responsive images",
    "lit",
    "web component"
  ],
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "repository": "github:simonihmig/responsive-image",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "cem analyze --litelement",
    "build": "tsc && npm run analyze -- --exclude dist",
    "lint:fix": "concurrently 'npm:lint.*:fix' --names 'fix:'",
    "lint.eslint": "eslint .",
    "lint.eslint:fix": "eslint . --fix",
    "lint.publint": "publint",
    "lint.prettier": "prettier . --check",
    "lint.prettier:fix": "prettier . --write",
    "lint.types": "tsc --noEmit",
    "prepack": "pnpm turbo build",
    "test.vitest": "vitest",
    "test.vitest:watch": "vitest watch"
  },
  "dependencies": {
    "@responsive-image/core": "workspace:^",
    "lit": "^3.1.4",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.11.0",
    "@responsive-image/internals": "workspace:*",
    "@open-wc/testing-helpers": "3.0.1",
    "@vitest/browser": "3.2.4",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "eslint-plugin-lit": "2.2.1",
    "globals": "17.3.0",
    "playwright": "1.58.2",
    "prettier": "3.8.1",
    "publint": "0.3.17",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "3.2.4"
  },
  "customElements": "custom-elements.json"
}
