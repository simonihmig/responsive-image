{
  "name": "@responsive-image/ember",
  "version": "2.0.0",
  "description": "Ember addon to render responsive images, provided as locally processed images or loaded remotely from Image CDNs",
  "keywords": [
    "ember-addon",
    "responsive image",
    "responsive images"
  ],
  "repository": "github:simonihmig/responsive-image",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "files": [
    "addon-main.cjs",
    "declarations",
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "lint:fix": "concurrently 'npm:lint.*:fix' --names 'fix:'",
    "lint.eslint": "eslint .",
    "lint.eslint:fix": "eslint . --fix",
    "lint.hbs": "ember-template-lint . --no-error-on-unmatched-pattern",
    "lint.hbs:fix": "ember-template-lint . --fix --no-error-on-unmatched-pattern",
    "lint.prettier": "prettier . --check",
    "lint.prettier:fix": "prettier . --write",
    "lint.types": "glint",
    "start": "vite dev",
    "test": "vite build --mode=development --out-dir dist-tests && testem --file testem.cjs ci --port 0",
    "prepack": "pnpm turbo build"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.9",
    "@embroider/macros": "^1.0.0",
    "@responsive-image/cdn": "workspace:^",
    "@responsive-image/core": "workspace:^",
    "decorator-transforms": "^2.2.2",
    "ember-async-data": "^2.0.0",
    "ember-style-modifier": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/plugin-transform-typescript": "7.28.0",
    "@babel/runtime": "7.28.4",
    "@ember/test-helpers": "5.2.2",
    "@ember/test-waiters": "4.1.1",
    "@embroider/addon-dev": "8.1.0",
    "@responsive-image/internals": "workspace:*",
    "@embroider/core": "4.1.0",
    "@embroider/compat": "4.1.0",
    "@embroider/macros": "1.18.0",
    "@embroider/vite": "1.2.0",
    "@glimmer/component": "2.0.0",
    "@glint/core": "2.0.0-alpha.5",
    "@glint/environment-ember-loose": "2.0.0-alpha.3",
    "@glint/environment-ember-template-imports": "2.0.0-alpha.3",
    "@glint/tsserver-plugin": "2.0.0-alpha.5",
    "@glint/template": "1.6.0-alpha.2",
    "@ember/app-tsconfig": "1.0.3",
    "@ember/library-tsconfig": "1.1.3",
    "@rollup/plugin-babel": "6.0.4",
    "@types/qunit": "2.19.12",
    "babel-plugin-ember-template-compilation": "3.0.1",
    "concurrently": "9.2.1",
    "ember-qunit": "9.0.3",
    "ember-resolver": "13.1.1",
    "ember-source": "6.3.0",
    "ember-template-lint": "7.9.3",
    "eslint": "9.35.0",
    "eslint-plugin-ember": "12.7.3",
    "globals": "16.3.0",
    "prettier": "3.6.2",
    "prettier-plugin-ember-template-tag": "2.1.0",
    "qunit": "2.24.1",
    "qunit-dom": "3.4.0",
    "rollup": "4.50.1",
    "testem": "3.15.2",
    "typescript": "5.9.2",
    "vite": "7.1.5"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {
      "./components/responsive-image.js": "./dist/_app_/components/responsive-image.js",
      "./helpers/responsive-image-cloudinary.js": "./dist/_app_/helpers/responsive-image-cloudinary.js",
      "./helpers/responsive-image-fastly.js": "./dist/_app_/helpers/responsive-image-fastly.js",
      "./helpers/responsive-image-imgix.js": "./dist/_app_/helpers/responsive-image-imgix.js",
      "./helpers/responsive-image-netlify.js": "./dist/_app_/helpers/responsive-image-netlify.js",
      "./helpers/responsive-image-resolve.js": "./dist/_app_/helpers/responsive-image-resolve.js"
    }
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./declarations/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*.css": "./dist/*.css",
    "./*": {
      "types": "./declarations/*.d.ts",
      "default": "./dist/*.js"
    },
    "./addon-main.js": "./addon-main.cjs"
  },
  "typesVersions": {
    "*": {
      "*": [
        "declarations/*"
      ]
    }
  },
  "volta": {
    "extends": "../../package.json"
  }
}
