{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "start": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "env": ["EMBER_TRY_CURRENT_SCENARIO", "EMBROIDER_TEST_SETUP_OPTIONS"]
    },
    "build": {
      "outputs": ["dist/**", "declarations/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^build"]
    }
  }
}
