{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src/**/*", "test/**/*", "./*.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": []
  }
}
