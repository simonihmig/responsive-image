{
  "name": "@responsive-image/cdn",
  "version": "2.0.0",
  "description": "Support for loading remote images from Image CDNs",
  "keywords": [
    "responsive image",
    "responsive images",
    "cdn",
    "image cdn"
  ],
  "repository": "github:simonihmig/responsive-image",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pkgroll",
    "lint:fix": "concurrently 'npm:lint.*:fix' --names 'fix:'",
    "lint.eslint": "eslint .",
    "lint.eslint:fix": "eslint . --fix",
    "lint.publint": "publint",
    "lint.prettier": "prettier . --check",
    "lint.prettier:fix": "prettier . --write",
    "lint.types": "tsc --noEmit",
    "start": "pkgroll --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prepack": "pnpm turbo build"
  },
  "dependencies": {
    "@responsive-image/core": "workspace:^"
  },
  "devDependencies": {
    "@responsive-image/internals": "workspace:*",
    "@tsconfig/strictest": "2.0.8",
    "concurrently": "9.2.1",
    "eslint": "9.39.1",
    "pkgroll": "2.21.3",
    "prettier": "3.6.2",
    "publint": "0.3.15",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
