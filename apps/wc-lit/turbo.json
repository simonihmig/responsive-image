{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    // turborepo will run dependsOn for *all* tasks, even when the current package does not have a matching script.
    // See https://github.com/vercel/turborepo/issues/937
    // We have some lint tasks that depend on `build`, but we don't want the (long!) build to be triggered for apps
    // when the lint tasks are not used at all.
    "lint.publint": {
      "dependsOn": []
    },
    "lint.svelte": {
      "dependsOn": []
    }
  }
}
