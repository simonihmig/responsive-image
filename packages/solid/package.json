{
  "name": "@responsive-image/solid",
  "version": "2.0.0",
  "description": "Solid.js component to render responsive images, provided as locally processed images or loaded remotely from Image CDNs",
  "keywords": [
    "responsive image",
    "responsive images",
    "solid"
  ],
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "repository": "github:simonihmig/responsive-image",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "solid": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.jsx"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rollup --config",
    "test": "concurrently 'pnpm:test:*(!watch)'",
    "test:client": "vitest",
    "test:server": "pnpm run test:client --mode ssr",
    "test:watch": "vitest watch",
    "lint": "concurrently 'npm:lint:*(!fix)' --names 'lint:'",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:package": "publint",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:types": "tsc --noEmit",
    "prepack": "pnpm turbo build"
  },
  "dependencies": {
    "@responsive-image/core": "workspace:^"
  },
  "peerDependencies": {
    "solid-js": "^1.6.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "7.27.1",
    "@embroider/addon-dev": "7.1.4",
    "@responsive-image/internals": "workspace:*",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@solidjs/testing-library": "0.8.10",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.13.4",
    "@vitest/browser": "3.2.2",
    "babel-preset-solid": "1.9.6",
    "concurrently": "9.1.2",
    "eslint": "9.28.0",
    "playwright": "1.52.0",
    "prettier": "3.5.3",
    "publint": "0.3.12",
    "rollup": "4.37.0",
    "rollup-plugin-node-externals": "8.0.0",
    "solid-js": "1.9.7",
    "typescript": "5.8.3",
    "vite-plugin-solid": "2.11.6",
    "vitest": "3.2.2"
  }
}
