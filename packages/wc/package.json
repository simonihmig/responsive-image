{
  "name": "@responsive-image/wc",
  "version": "1.1.0",
  "description": "Web component to render responsive images, provided as locally processed images or loaded remotely from Image CDNs",
  "keywords": [
    "responsive image",
    "responsive images",
    "lit",
    "web component"
  ],
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "repository": "https://github.com/simonihmig/responsive-image",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "cem analyze --litelement",
    "build": "tsc && npm run analyze -- --exclude dist",
    "lint": "concurrently 'npm:lint:*(!fix)' --names 'lint:'",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:types": "tsc --noEmit",
    "prepack": "pnpm turbo build",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@lit/task": "^1.0.2",
    "@responsive-image/core": "workspace:^",
    "blurhash": "^2.0.0",
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.10.4",
    "@responsive-image/internals": "workspace:*",
    "@open-wc/testing-helpers": "3.0.1",
    "@vitest/browser": "3.0.9",
    "concurrently": "9.1.2",
    "eslint": "9.22.0",
    "eslint-plugin-lit": "2.0.0",
    "globals": "15.15.0",
    "playwright": "1.51.1",
    "prettier": "3.5.3",
    "tslib": "2.8.1",
    "typescript": "5.8.2",
    "vite": "6.2.2",
    "vitest": "3.0.9"
  },
  "customElements": "custom-elements.json"
}
