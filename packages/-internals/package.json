{
  "name": "@responsive-image/internals",
  "version": "0.0.0",
  "description": "Internal tooling",
  "repository": "github:simonihmig/responsive-image",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "private": "true",
  "scripts": {
    "build": "pkgroll",
    "dev": "pkgroll --watch",
    "lint": "concurrently 'npm:lint:*(!fix)' --names 'lint:'",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:package": "publint",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepack": "pnpm turbo build"
  },
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./eslint": {
      "default": "./dist/eslint/index.js"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "default": "./dist/playwright/index.js"
    },
    "./screenshots": "./src/playwright/__screenshots__/index.js"
  },
  "dependencies": {
    "@eslint/compat": "1.3.1",
    "@eslint/js": "9.30.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.20.0",
    "globals": "16.3.0",
    "typescript-eslint": "8.35.0"
  },
  "devDependencies": {
    "@playwright/test": "1.53.1",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.13.4",
    "concurrently": "9.2.0",
    "eslint": "9.30.0",
    "pkgroll": "2.13.1",
    "prettier": "3.5.3",
    "publint": "0.3.12",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@playwright/test": "^1.52.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    }
  },
  "engines": {
    "node": "20.* || >= 22"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
