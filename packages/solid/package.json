{
  "name": "@responsive-image/solid",
  "version": "2.0.4",
  "description": "Solid.js component to render responsive images, provided as locally processed images or loaded remotely from Image CDNs",
  "keywords": [
    "responsive image",
    "responsive images",
    "solid"
  ],
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "repository": "github:simonihmig/responsive-image",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "solid": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.jsx"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rollup --config",
    "test.vitest": "vitest",
    "test.vitest:server": "vitest --mode ssr",
    "test.vitest:watch": "vitest watch",
    "lint:fix": "concurrently 'npm:lint.*:fix' --names 'fix:'",
    "lint.eslint": "eslint .",
    "lint.eslint:fix": "eslint . --fix",
    "lint.publint": "publint",
    "lint.prettier": "prettier . --check",
    "lint.prettier:fix": "prettier . --write",
    "lint.types": "tsc --noEmit",
    "prepack": "pnpm turbo build"
  },
  "dependencies": {
    "@responsive-image/core": "workspace:^"
  },
  "peerDependencies": {
    "solid-js": "^1.6.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "7.28.5",
    "@embroider/addon-dev": "7.1.6",
    "@responsive-image/internals": "workspace:*",
    "@rollup/plugin-babel": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@solidjs/testing-library": "0.8.10",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "22.19.7",
    "@vitest/browser": "3.2.4",
    "babel-preset-solid": "1.9.10",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "playwright": "1.58.0",
    "prettier": "3.8.1",
    "publint": "0.3.17",
    "rollup": "4.57.0",
    "rollup-plugin-node-externals": "8.1.2",
    "solid-js": "1.9.11",
    "typescript": "5.9.3",
    "vite-plugin-solid": "2.11.10",
    "vitest": "3.2.4"
  }
}
