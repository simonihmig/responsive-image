{
  "name": "@responsive-image/internals",
  "version": "0.0.0",
  "description": "Internal tooling",
  "repository": "github:simonihmig/responsive-image",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "private": "true",
  "scripts": {
    "build": "pkgroll",
    "dev": "pkgroll --watch",
    "lint:fix": "concurrently 'npm:lint.*:fix' --names 'fix:'",
    "lint.eslint": "eslint . --cache",
    "lint.eslint:fix": "eslint . --fix",
    "lint.publint": "publint",
    "lint.prettier": "prettier --check .",
    "lint.prettier:fix": "prettier --write .",
    "prepack": "pnpm turbo build"
  },
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./eslint": {
      "default": "./dist/eslint/index.js"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "default": "./dist/playwright/index.js"
    },
    "./screenshots": "./src/playwright/__screenshots__/index.js"
  },
  "dependencies": {
    "@eslint/compat": "2.0.2",
    "@eslint/js": "10.0.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.24.0",
    "globals": "17.3.0",
    "typescript-eslint": "8.56.0"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "22.19.11",
    "concurrently": "9.2.1",
    "eslint": "10.0.0",
    "pkgroll": "2.26.3",
    "prettier": "3.8.1",
    "publint": "0.3.17",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@playwright/test": "^1.52.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    }
  },
  "engines": {
    "node": "20.* || >= 22"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
