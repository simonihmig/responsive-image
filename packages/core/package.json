{
  "name": "@responsive-image/core",
  "version": "2.0.0",
  "description": "Internal core functions and config for the ResponsiveImage project",
  "keywords": [
    "responsive image",
    "responsive images"
  ],
  "repository": "github:simonihmig/responsive-image",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./blurhash/decode": {
      "types": "./dist/blurhash/decode.d.ts",
      "default": "./dist/blurhash/decode.js"
    },
    "./blurhash/ssr": {
      "types": "./dist/blurhash/ssr.d.ts",
      "default": "./dist/blurhash/ssr.js"
    },
    "./thumbhash/decode": {
      "types": "./dist/thumbhash/decode.d.ts",
      "default": "./dist/thumbhash/decode.js"
    },
    "./thumbhash/ssr": {
      "types": "./dist/thumbhash/ssr.d.ts",
      "default": "./dist/thumbhash/ssr.js"
    }
  },
  "scripts": {
    "build": "pkgroll",
    "lint": "concurrently 'npm:lint:*(!fix)' --names 'lint:'",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:package": "publint",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:types": "tsc --noEmit",
    "start": "pkgroll --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prepack": "pnpm turbo build"
  },
  "dependencies": {
    "base64-arraybuffer": "^1.0.2"
  },
  "peerDependencies": {
    "blurhash": "^2.0.0",
    "thumbhash": "^0.1.1"
  },
  "devDependencies": {
    "@responsive-image/internals": "workspace:*",
    "@tsconfig/strictest": "2.0.5",
    "blurhash": "2.0.5",
    "concurrently": "9.1.2",
    "eslint": "9.29.0",
    "pkgroll": "2.13.1",
    "prettier": "3.5.3",
    "publint": "0.3.12",
    "thumbhash": "0.1.1",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "peerDependenciesMeta": {
    "blurhash": {
      "optional": true
    },
    "thumbhash": {
      "optional": true
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
