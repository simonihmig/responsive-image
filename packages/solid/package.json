{
  "name": "@responsive-image/solid",
  "version": "1.0.1",
  "description": "Solid.js component to render responsive images, provided as locally processed images or loaded remotely from Image CDNs",
  "keywords": [
    "responsive image",
    "responsive images",
    "solid"
  ],
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "repository": "https://github.com/simonihmig/responsive-image",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "solid": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.jsx"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rollup --config",
    "test": "concurrently 'pnpm:test:*(!watch)'",
    "test:client": "vitest",
    "test:server": "pnpm run test:client --mode ssr",
    "test:watch": "vitest watch",
    "lint": "concurrently 'npm:lint:*(!fix)' --names 'lint:'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:types": "tsc --noEmit",
    "prepack": "pnpm turbo build"
  },
  "dependencies": {
    "@responsive-image/core": "workspace:^",
    "blurhash": "^2.0.0"
  },
  "peerDependencies": {
    "solid-js": "^1.6.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "7.26.0",
    "@embroider/addon-dev": "7.1.1",
    "@eslint/compat": "1.2.5",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-node-resolve": "16.0.0",
    "@solidjs/testing-library": "0.8.10",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.10.10",
    "@vitest/browser": "2.1.8",
    "babel-preset-solid": "1.9.3",
    "concurrently": "9.1.2",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "globals": "15.14.0",
    "playwright": "1.50.0",
    "prettier": "3.4.2",
    "rollup": "4.31.0",
    "rollup-plugin-node-externals": "8.0.0",
    "solid-js": "1.9.4",
    "typescript": "5.7.3",
    "typescript-eslint": "8.21.0",
    "vite-plugin-solid": "2.11.0",
    "vitest": "2.1.8"
  }
}
