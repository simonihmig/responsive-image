{
  "name": "@responsive-image/build-utils",
  "version": "2.0.0",
  "description": "Internal package for shared build-related code as part of the ResponsiveImage project",
  "keywords": [
    "responsive image",
    "responsive images"
  ],
  "repository": "github:simonihmig/responsive-image",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "scripts": {
    "build": "pkgroll",
    "lint:fix": "concurrently 'npm:lint.*:fix' --names 'fix:'",
    "lint.eslint": "eslint .",
    "lint.eslint:fix": "eslint . --fix",
    "lint.publint": "publint",
    "lint.prettier": "prettier . --check",
    "lint.prettier:fix": "prettier . --write",
    "lint.types": "tsc --noEmit",
    "prepack": "pnpm turbo build",
    "start": "pkgroll --watch",
    "test.vitest": "vitest run",
    "test.vitest:watch": "vitest watch"
  },
  "dependencies": {
    "@responsive-image/core": "workspace:^",
    "@rollup/pluginutils": "^5.1.0",
    "base-n": "^3.0.0",
    "imagetools-core": "^7.0.0",
    "javascript-stringify": "^2.1.0",
    "sharp": "^0.34.0"
  },
  "devDependencies": {
    "@responsive-image/internals": "workspace:*",
    "@tsconfig/node20": "20.1.8",
    "@types/jest-image-snapshot": "6.4.0",
    "@types/node": "22.19.1",
    "concurrently": "9.2.1",
    "eslint": "9.39.1",
    "glob": "13.0.0",
    "jest-image-snapshot": "6.5.1",
    "pkgroll": "2.21.5",
    "prettier": "3.6.2",
    "publint": "0.3.17",
    "rollup": "4.56.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": "20.* || >= 22"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
