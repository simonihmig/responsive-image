{
	"name": "@responsive-image/svelte",
	"description": "Svelte component to render responsive images, provided as locally processed images or loaded remotely from Image CDNs",
	"keywords": [
		"responsive image",
		"responsive images",
		"svelte"
	],
	"license": "MIT",
	"author": "Simon Ihmig <simon.ihmig@gmail.com>",
	"repository": "github:simonihmig/responsive-image",
	"version": "2.0.4",
	"scripts": {
		"build": "svelte-package",
		"prepack": "pnpm run build",
		"lint:fix": "concurrently 'npm:lint.*:fix' --names 'fix:'",
		"lint.eslint": "eslint .",
		"lint.eslint:fix": "eslint . --fix",
		"lint.svelte": "svelte-check --tsconfig ./tsconfig.json",
		"lint.svelte:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint.publint": "publint",
		"lint.prettier": "prettier . --check",
		"lint.prettier:fix": "prettier . --write",
		"lint.types": "svelte-check --tsconfig ./tsconfig.json",
		"test.vitest": "vitest",
		"test.vitest:watch": "vitest watch"
	},
	"files": [
		"dist"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"dependencies": {
		"@responsive-image/core": "workspace:^"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@responsive-image/internals": "workspace:*",
		"@sveltejs/package": "2.5.7",
		"@sveltejs/vite-plugin-svelte": "6.2.4",
		"@testing-library/svelte": "5.2.8",
		"@tsconfig/strictest": "2.0.8",
		"@vitest/browser-playwright": "4.0.18",
		"concurrently": "9.2.1",
		"eslint": "10.0.0",
		"eslint-plugin-svelte": "3.15.0",
		"playwright": "1.58.2",
		"prettier": "3.8.1",
		"publint": "0.3.17",
		"prettier-plugin-svelte": "3.5.0",
		"svelte": "5.53.0",
		"svelte-check": "4.4.1",
		"typescript": "5.9.3",
		"typescript-eslint": "8.56.0",
		"vitest": "4.0.18"
	},
	"volta": {
		"extends": "../../package.json"
	}
}
