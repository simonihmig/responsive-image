{
  "name": "@responsive-image/internals",
  "version": "0.0.0",
  "description": "Internal tooling",
  "repository": "https://github.com/simonihmig/responsive-image",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@gmail.com>",
  "private": "true",
  "scripts": {
    "build": "pkgroll",
    "dev": "pkgroll --watch",
    "lint": "concurrently 'npm:lint:*(!fix)' --names 'lint:'",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepack": "pnpm turbo build"
  },
  "type": "module",
  "exports": {
    "./eslint": {
      "default": "./dist/eslint/index.js"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "default": "./dist/playwright/index.js"
    },
    "./screenshots": "./src/playwright/__screenshots__/index.js"
  },
  "dependencies": {
    "@eslint/compat": "1.2.9",
    "@eslint/js": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.18.0",
    "globals": "16.1.0",
    "typescript-eslint": "8.32.0"
  },
  "devDependencies": {
    "@playwright/test": "1.52.0",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.13.4",
    "concurrently": "9.1.2",
    "eslint": "9.26.0",
    "pkgroll": "2.12.2",
    "prettier": "3.5.3",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@playwright/test": "^1.52.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    }
  },
  "engines": {
    "node": "20.* || >= 22"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
